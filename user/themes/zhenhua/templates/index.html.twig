{% extends 'partials/base.html.twig' %}

{% block content %}
<section class="carousel-section">
    <div id="carousel-example-generic" class="carousel carousel-razon slide" data-ride="carousel" data-interval="5000">
        <ol class="carousel-indicators">
        	{% for i in 0..((header.content.carousels|length)-1) %}
        		{% if i==0 %}
        			<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>	
        		{% else %}
        			<li data-target="#carousel-example-generic" data-slide-to="{{ i }}"></li> 
        		{% endif %} 
        	{% endfor %}
        </ol>

        <div class="carousel-inner">
        	{% for item in header.content.carousels %}
            <div class="item {{ item.active }}">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 col-sm-7">
                            <div class="carousel-caption">
                                <div class="carousel-text">
                                   <h1 class="animated fadeInDownBig animation-delay-7 carousel-title">{{ item.title }}</h1>
                                   <h2 class="animated fadeInDownBig animation-delay-5  crousel-subtitle">{{ item.subtitle }}</h2>
                                   <ul class="list-unstyled carousel-list">
                                   		{% for ls in item.list %}
                                       <li class="animated bounceInLeft animation-delay-11"><i class="fa fa-check"></i>{{ ls }}</li>
                                       {% endfor %}
                                   </ul>
                                   <p class="animated fadeInUpBig animation-delay-17">{{ item.description }}</p>
                               </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-5 hidden-xs carousel-img-wrap">
                            <div class="carousel-img">
                                 <img src="{{ url(item.image) }}" class="img-responsive animated bounceInUp animation-delay-3" alt="Image">                           
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
</section>
{% endblock %}