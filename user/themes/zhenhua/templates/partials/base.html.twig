<!DOCTYPE html>
<html lang="en">
<head>
{% block head %}
    <meta charset="UTF-8">
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    {% include 'partials/metadata.html.twig' %}    
    <link rel="shortcut icon" type="image/png" href="{{ url('theme://images/favicon.png') }}"/>
    <link rel="canonical" href="{{ page.url(true, true) }}" />
    
    {% block stylesheets %}
        {% do assets.addCss('theme://css/preload.css', 200) %}
        {% do assets.addCss('theme://css/vendors.css', 190) %}
        {% do assets.addCss('theme://css/style-blue.css', 180) %}
        {% do assets.addCss('theme://css/width-full.css', 170) %}
        {% if browser.getBrowser == 'msie' and browser.getVersion >= 8 and browser.getVersion <= 9 %}
            {% do assets.addJs('theme://js/html5shiv.min.js') %}
            {% do assets.addJs('theme://js/respond.min.js') %}
        {% endif %}        
	{% endblock %}
	{{ assets.css() }}
	
    {% block javascripts %}
        {% do assets.addJs('theme://js/vendors.js', 200) %}
        {% do assets.addJs('theme://js/app.js', 180) %}
    {% endblock %}	
    {{ assets.js() }}
{% endblock head%}    
</head>

<body id="top">
<div id="sb-site">
<div class="boxed">
{% block header %}
<header id="header-full-top" class="hidden-xs header-full">
    <div class="container">
        <div class="col-md-12">
            <div class="header-full-title">
                <h1><a href="index.html"><span>北京振华学校</span></a></h1>
                <p>BEIJING ZHENHUA SCHOOL</p>
            </div>
        </div>
    </div> 
</header>
{% endblock %}

{% block nav %}
{% include 'partials/navigation.html.twig' %}
{% endblock %}

{% block body %}
<section id="body" class="{{ class }}">
    {% block content %}{% endblock %}
</section>
{% endblock %}

{% block footer %}
<footer id="footer">
    <p><a href="http://www.miitbeian.gov.cn">京ICP备17009583号</a> 
    	&copy; 2017 <a href="http://www.zhenhuaschool.com">北京振华学校</a> 版权所有. 
    	<a href="https://github.com/fangyun">Yun's Studio</a>技术支持.</p>
</footer>
{% endblock %}
</div>
</div>
</body>
</html>